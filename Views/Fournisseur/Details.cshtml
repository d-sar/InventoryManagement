@model InventoryManagementMVC.Models.ViewModels.FournisseurViewModel

@{
    ViewData["Title"] = "Détails Fournisseur";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-info text-white">
            <h6 class="m-0 font-weight-bold">
                <i class="fas fa-info-circle mr-2"></i>@ViewData["Title"]
            </h6>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nom)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nom)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Telephone)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Telephone)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Adresse)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Adresse)</dd>

                

               
            </dl>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit mr-1"></i>Modifier
                </a>
                <a asp-action="Index" class="btn btn-secondary ml-2">
                    <i class="fas fa-list mr-1"></i>Retour à la liste
                </a>
            </div>
        </div>
    </div>
</div>