@model InventoryManagementMVC.Models.ViewModels.CreateProduitViewModel

@{
    ViewData["Title"] = "Nouveau Produit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-plus text-success"></i> @ViewData["Title"]</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Retour à la liste
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-plus-circle"></i> Informations du Produit</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Libelle" class="form-label"></label>
                                <input asp-for="Libelle" class="form-control" placeholder="Nom du produit" />
                                <span asp-validation-for="Libelle" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="IdCategorie" class="form-label"></label>
                                <select asp-for="IdCategorie" class="form-select" asp-items="ViewBag.Categories">
                                    <option value="">-- Sélectionner une catégorie --</option>
                                </select>
                                <span asp-validation-for="IdCategorie" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Description du produit (optionnel)"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="PrixUnitaire" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">MAD</span>
                                    <input asp-for="PrixUnitaire" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="PrixUnitaire" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="QuantiteStock" class="form-label"></label>
                                <input asp-for="QuantiteStock" class="form-control" type="number" min="0" placeholder="0" />
                                <span asp-validation-for="QuantiteStock" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary me-2">
                            <i class="fas fa-times"></i> Annuler
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Créer le Produit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-info-circle"></i> Aide</h6>
            </div>
            <div class="card-body">
                <h6>Conseils :</h6>
                <ul class="list-unstyled">
                    <li><i class="fas fa-check text-success"></i> Utilisez un nom descriptif</li>
                    <li><i class="fas fa-check text-success"></i> Sélectionnez la bonne catégorie</li>
                    <li><i class="fas fa-check text-success"></i> Ajoutez une description détaillée</li>
                    <li><i class="fas fa-check text-success"></i> Vérifiez le prix unitaire</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}