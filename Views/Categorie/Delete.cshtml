@model InventoryManagementMVC.Models.ViewModels.CategorieViewModel

@{
    ViewData["Title"] = "Supprimer la Categorie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-trash text-danger"></i> @ViewData["Title"]</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Retour à la liste
    </a>
</div>

<div class="alert alert-warning" role="alert">
    <i class="fas fa-exclamation-triangle"></i>
    <strong>Attention !</strong> Vous êtes sur le point de supprimer définitivement cette categorie.
    Cette action est irréversible.
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="fas fa-trash"></i> Confirmer la Suppression</h5>
            </div>
            <div class="card-body">
                <p class="lead">Êtes-vous sûr de vouloir supprimer cette Categorie ?</p>

                <dl class="row">
                    <dt class="col-sm-3">Nom:</dt>
                    <dd class="col-sm-9"><strong>@Model.Nom</strong></dd>

                    <dt class="col-sm-3">Descreption:</dt>
                    <dd class="col-sm-9"><strong>@Model.Description</strong></dd>

                    

                   
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="IdCategorie" />
                    <div class="d-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary me-2">
                            <i class="fas fa-times"></i> Annuler
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Confirmer la Suppression
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h6 class="mb-0"><i class="fas fa-exclamation-circle"></i> Conséquences</h6>
            </div>
            <div class="card-body">
                <p class="text-muted">
                    <small>
                        La suppression de ce produit entraînera :
                    </small>
                </p>
                <ul class="list-unstyled">
                    <li><i class="fas fa-times text-danger"></i> Perte définitive des données</li>
                    <li><i class="fas fa-times text-danger"></i> Suppression de l'historique</li>
                    <li><i class="fas fa-times text-danger"></i> Impact sur les documents liés</li>
                </ul>

            </div>
        </div>
    </div>
</div>